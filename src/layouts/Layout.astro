---
const { title = "Simon Groiss" } = Astro.props;
const { bgColor = "var(--sg-black)" } = Astro.props;
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Marquee from "../components/Marquee.astro";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content="Astro 5 + Vite + TailwindCSS" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="min-h-screen flex flex-col overflow-x-hidden bg-sg-primary/0 text-white"
    style={`background-color: ${bgColor};`}
  >
    <Header />
    <slot />
    <script>
      import "../scripts/main.js";
    </script>

    <div id="footer-marquees" class="py-16">
      <a href="#" class="text-sg-light-black footer-marquee-link">
        <Marquee label="projects" direction="right" />
      </a>
      <a href="#" class="text-sg-light-black footer-marquee-link">
        <Marquee label="contact" direction="left" />
      </a>
    </div>

    <Footer />

    <div id="res-helper"></div>
  </body>
</html>
