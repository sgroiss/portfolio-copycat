{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "desc": {
          "type": "string"
        },
        "img": {
          "type": "string"
        },
        "imgAlt": {
          "type": "string"
        },
        "year": {
          "type": "number"
        },
        "client": {
          "type": "string"
        },
        "role": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "featured": {
          "type": "boolean",
          "default": true
        },
        "order": {
          "type": "number"
        },
        "overlayColor": {
          "type": "string"
        },
        "contentColor": {
          "type": "string"
        },
        "contentTextColor": {
          "type": "string"
        },
        "sections": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "media"
                  },
                  "format": {
                    "type": "string",
                    "enum": [
                      "image",
                      "video"
                    ]
                  },
                  "src": {
                    "type": "string"
                  },
                  "alt": {
                    "type": "string"
                  },
                  "poster": {
                    "type": "string"
                  },
                  "class": {
                    "type": "string"
                  },
                  "fullwidth": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "format",
                  "src"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "media-group"
                  },
                  "layout": {
                    "type": "string",
                    "enum": [
                      "2col",
                      "3col"
                    ],
                    "default": "2col"
                  },
                  "gap": {
                    "type": "string"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "format": {
                          "type": "string",
                          "enum": [
                            "image",
                            "video"
                          ]
                        },
                        "src": {
                          "type": "string"
                        },
                        "alt": {
                          "type": "string"
                        },
                        "poster": {
                          "type": "string"
                        },
                        "class": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "format",
                        "src"
                      ],
                      "additionalProperties": false
                    }
                  }
                },
                "required": [
                  "type",
                  "items"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "text"
                  },
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "title",
                  "body"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "spacer"
                  },
                  "size": {
                    "type": "string",
                    "default": "py-20"
                  }
                },
                "required": [
                  "type"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "desc",
        "img",
        "year"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}